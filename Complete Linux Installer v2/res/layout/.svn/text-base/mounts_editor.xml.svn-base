<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <TextView
        android:id="@+id/Lab_Intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/configure_Mounts_Intro"/>

        <Button
        android:id="@+id/btn_SaveAndExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="@string/button_SaveAndExit" android:layout_alignParentLeft="true" android:layout_alignParentBottom="true"/>
<Button
        android:id="@+id/btn_AbortChanges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:text="@string/button_mounts_abort_changes" />

    <ListView
        android:id="@+id/lst_Mounts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/Lab_Intro"
        android:layout_above="@id/btn_SaveAndExit"
        android:divider="@drawable/listview_divider"
        android:dividerHeight="1dp"
        android:paddingTop="3dp" android:paddingBottom="3dp" android:paddingLeft="3dp" android:paddingRight="3dp">
    </ListView>

</RelativeLayout>
