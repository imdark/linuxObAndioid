<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content" android:layout_height="wrap_content">
<ScrollView android:id="@+id/DialogScrollView" android:layout_width="200dp" android:layout_height="wrap_content" >
		<TextView
		    android:id="@+id/dlg_TextView"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/dialog_select_donwload_type_description"
			android:textAppearance="?android:textAppearanceSmall" />
     </ScrollView>
<Button
	    android:id="@+id/btn_Torrent"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/DialogScrollView"
	    android:layout_centerHorizontal="true"
	    android:text="@string/dialog_button_torrent" />
<Button
	    android:id="@+id/btn_Sourceforge"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/btn_Torrent"
	    android:layout_centerHorizontal="true"
	    android:text="@string/dialog_button_sourceforge" />
<Button
	    android:id="@+id/btn_Cancel"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/btn_Sourceforge"
	    android:layout_centerHorizontal="true"
	    android:text="@string/dialog_button_cancel_download" />
</RelativeLayout>
